<div class="fullscreen">
  <%= vider_tag 'video/clips_final2', position: '100% 100%' %>
</div>

<div class="slogan">
  <h1 style="color: white">Connecting you with local Farmers! </h1>
</div>

<div class="search-border">
<div>
  <h5 class='center-align'>Search by Product or Market</h5>
</div>

<div>
  <form action = "/search/" id='home_search' class='row form' method='get'>
    <div class="input-field">
      <div class="input-field col s3 search-criteria">
        <%= select_tag(:type, options_for_select([['product', 'product'], ['market', 'market']])) %>
      </div>
      <%= text_field_tag :param, params[:search], :class => 'search_bar'%>

              <!-- Dropdown Structure -->
      <ul id='dropdown1' class='center-align dropdown-content'>
         <li><a href="#!">market</a></li>
         <li><a href="#!">product</a></li>
      </ul>
    </div>
    <%= submit_tag "Search", :class => 'search_btn', :name => nil %>
  </form>
</div>
<div class='row search'>
  <a href='/markets'>Search Markets by Postal Code</a>
</div>
</div>

